<!-- res/layout/dialog_check_in.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/baseColor"
    android:padding="@dimen/_16sdp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customer Detail"
        android:gravity="center"
        android:textSize="@dimen/_15sdp"
        android:layout_margin="@dimen/_10sdp"
        android:fontFamily="@font/poppins"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/editCustomerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Customer Name"
        android:background="@drawable/edit_text_bg"
        android:padding="@dimen/_8sdp"
        android:fontFamily="@font/poppins"
        android:textSize="@dimen/_11sdp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:layout_margin="@dimen/_10sdp"/>

    <EditText
        android:id="@+id/editCustomerAadhar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Aadhar Number"
        android:background="@drawable/edit_text_bg"
        android:padding="@dimen/_8sdp"
        android:fontFamily="@font/poppins"
        android:textSize="@dimen/_11sdp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:layout_margin="@dimen/_10sdp"/>

    <EditText
        android:id="@+id/editCustomerPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:background="@drawable/edit_text_bg"
        android:padding="@dimen/_8sdp"
        android:fontFamily="@font/poppins"
        android:textSize="@dimen/_11sdp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:layout_margin="@dimen/_10sdp"/>

    <EditText
        android:id="@+id/editCustomerRoom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Room No."
        android:background="@drawable/edit_text_bg"
        android:padding="@dimen/_8sdp"
        android:fontFamily="@font/poppins"
        android:textSize="@dimen/_11sdp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:layout_margin="@dimen/_10sdp"/>


    <!-- Date Picker -->
    <TextView
        android:id="@+id/tvCheckInDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Check-In Date"
        android:padding="@dimen/_8sdp"
        android:background="@drawable/edit_text_bg"
        android:textSize="@dimen/_11sdp"
        android:textColor="@color/black"
        android:layout_margin="@dimen/_10sdp"/>

    <Button
        android:id="@+id/buttonPickDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick Date"
        android:background="@drawable/button_bg"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins"
        android:textSize="@dimen/_10sdp"
        android:textAllCaps="false"
        android:layout_margin="@dimen/_10sdp"/>

    <!-- Time Picker -->
    <TextView
        android:id="@+id/tvCheckInTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Check-In Time"
        android:padding="@dimen/_8sdp"
        android:background="@drawable/edit_text_bg"
        android:textSize="@dimen/_11sdp"
        android:textColor="@color/black"
        android:layout_margin="@dimen/_10sdp"/>

    <Button
        android:id="@+id/buttonPickTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pick Time"
        android:background="@drawable/button_bg"
        android:textColor="@color/white"
        android:fontFamily="@font/poppins"
        android:textSize="@dimen/_10sdp"
        android:textAllCaps="false"
        android:layout_margin="@dimen/_10sdp"/>

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:textColor="@color/white"
        android:text="Submit"
        android:fontFamily="@font/poppins"
        android:textSize="@dimen/_10sdp"
        android:textAllCaps="false"
        android:layout_margin="@dimen/_10sdp"/>
</LinearLayout>
